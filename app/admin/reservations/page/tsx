"use client";

import { useEffect, useState } from "react";
import AnimatedSection from "@/components/AnimatedSection";
import SectionHeading from "@/components/SectionHeading";
import { Card, CardContent, Button } from "@mui/material";
import { DataGrid, GridColDef } from "@mui/x-data-grid";
import { CheckCircle2, Trash2 } from "lucide-react";

type ReservationRow = {
  id: number;
  name: string;
  email: string;
  phone: string;
  date: string;
  time: string;
  guests: number;
  requests?: string | null;
  confirmed: boolean;
  createdAt: string;
};

export default function AdminReservationsPage() {
  const [rows, setRows] = useState<ReservationRow[]>([]);
  const [loading, setLoading] = useState(true);

  const fetchReservations = async () => {
    setLoading(true);
    try {
      const res = await fetch("/api/reservations");
      const data = await res.json();
      setRows(data);
    } catch (e) {
      console.error(e);
    } finally {
      setLoading(false);
    }
  };

  useEffect(() => {
    fetchReservations();
  }, []);

  const handleConfirm = async (id: number) => {
    try {
      await fetch(`/api/reservations?id=${id}`, {
        method: "PATCH",
        body: JSON.stringify({ confirmed: true }),
        headers: { "Content-Type": "application/json" }
      });
      fetchReservations();
    } catch (e) {
      console.error(e);
    }
  };

  const handleDelete = async (id: number) => {
    if (!confirm("Delete this reservation?")) return;
    try {
      await fetch(`/api/reservations?id=${id}`, {
        method: "DELETE"
      });
      fetchReservations();
    } catch (e) {
      console.error(e);
    }
  };

  const columns: GridColDef<ReservationRow>[] = [
    { field: "name", headerName: "Name", flex: 1, minWidth: 150 },
    { field: "email", headerName: "Email", flex: 1.1, minWidth: 180 },
    { field: "phone", headerName: "Phone", flex: 0.8, minWidth: 130 },
    {
      field: "date",
      headerName: "Date",
      flex: 0.7,
      valueGetter: (params) => new Date(params.value).toLocaleDateString()
    },
    { field: "time", headerName: "Time", flex: 0.5 },
    {
      field: "guests",
      headerName: "Guests",
      type: "number",
      flex: 0.4
    },
    {
      field: "confirmed",
      headerName: "Status",
      flex: 0.6,
      renderCell: (params) =>
        params.value ? (
          <span className="inline-flex items-center gap-1 rounded-full bg-emerald-50 px-2 py-1 text-xs text-emerald-700">
            <CheckCircle2 className="h-3 w-3" />
            Confirmed
          </span>
        ) : (
          <span className="inline-flex items-center gap-1 rounded-full bg-amber-50 px-2 py-1 text-xs text-amber-700">
            Pending
          </span>
        )
    },
    {
      field: "actions",
      headerName: "Actions",
      sortable: false,
      filterable: false,
      width: 180,
      renderCell: (params) => (
        <div className="flex gap-1">
          {!params.row.confirmed && (
            <Button
              size="small"
              color="success"
              variant="outlined"
              onClick={() => handleConfirm(params.row.id)}
              startIcon={<CheckCircle2 className="h-3 w-3" />}
            >
              Confirm
            </Button>
          )}
          <Button
            size="small"
            color="error"
            variant="text"
            onClick={() => handleDelete(params.row.id)}
            startIcon={<Trash2 className="h-3 w-3" />}
          >
            Delete
          </Button>
        </div>
      )
    }
  ];

  return (
    <AnimatedSection>
      <div className="mx-auto max-w-6xl px-4 py-12 sm:px-6 lg:px-8 space-y-6">
        <SectionHeading
          eyebrow="Admin"
          title="Reservations"
          subtitle="View, confirm, and manage upcoming reservations."
          align="left"
        />
        <Card className="shadow-soft">
          <CardContent>
            <div style={{ width: "100%", height: 480 }}>
              <DataGrid
                rows={rows}
                columns={columns}
                loading={loading}
                pageSizeOptions={[5, 10, 20]}
                initialState={{
                  pagination: { paginationModel: { pageSize: 10, page: 0 } },
                  sorting: {
                    sortModel: [{ field: "date", sort: "asc" }]
                  }
                }}
              />
            </div>
          </CardContent>
        </Card>
      </div>
    </AnimatedSection>
  );
}
